
# use build_html.sh to set/build the following variables
#	OPTIMIZATION=
#	LIB=


CC=emcc
CFLAGS= $(CFLAGS_EXTRA) $(OPTIMIZATION) -I../Include -Wall -DFT2_BUILD_LIBRARY -DNDEBUG
LDFLAGS= $(CFLAGS_EXTRA) $(OPTIMIZATION)

MKDIR=mkdir -p
RM=rm -f
CP=cp -vf

# ----------------------------------------

INTERMEDIATE=Intermediate

$(INTERMEDIATE):
	$(MKDIR) $(INTERMEDIATE)

# ----------------------------------------

SOURCES = winfonts/winfnt.c \
		autofit/autofit.c \
		base/ftbase.c \
		base/ftbbox.c \
		base/ftbdf.c \
		base/ftbitmap.c \
		base/ftcid.c \
		base/ftdebug.c \
		base/ftfntfmt.c \
		base/ftfstype.c \
		base/ftgasp.c \
		base/ftglyph.c \
		base/ftgxval.c \
		base/ftinit.c \
		base/ftlcdfil.c \
		base/ftmm.c \
		base/ftotval.c \
		base/ftpatent.c \
		base/ftpfr.c \
		base/ftstroke.c \
		base/ftsynth.c \
		base/ftsystem.c \
		base/fttype1.c \
		base/ftwinfnt.c \
		bdf/bdf.c \
		bzip2/ftbzip2.c \
		cache/ftcache.c \
		cff/cff.c \
		cid/type1cid.c \
		gzip/ftgzip.c \
		lzw/ftlzw.c \
		pcf/pcf.c \
		pfr/pfr.c \
		psaux/psaux.c \
		pshinter/pshinter.c \
		psnames/psnames.c \
		raster/raster.c \
		sfnt/sfnt.c \
		smooth/smooth.c \
		truetype/truetype.c \
		type1/type1.c \
		type42/type42.c \

# ----------------------------------------

OBJECTS=$(SOURCES:%.c=$(INTERMEDIATE)/%.bc)

$(INTERMEDIATE)/%.bc : %.c
	$(MKDIR) $(dir $@)
	$(CC) $(CFLAGS) $< -o $@

TARGET=$(INTERMEDIATE)/$(LIB)

$(TARGET): $(INTERMEDIATE) $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

all: $(SOURCES) $(TARGET)
#all: $(SOURCES) $(TARGET) $(LIBFREETYPE_JS)

install: all
	$(CP) $(TARGET) ../Lib/HTML5/.
#	$(CP) $(LIBFREETYPE_JS) ../Lib/HTML5/.

uninstall:
	$(RM) ../Lib/HTML5/$(LIB)
#	$(RM) ../Lib/HTML5/$(LIBFREETYPE_JS)

clean:
	$(RM) $(OBJECTS) $(TARGET)

# ----------------------------------------

test: all
	$(CC) -I../Include -I../Include/freetype $(OPTIMIZATION) -o main.bc main.c
	$(CC) -o main.js main.bc $(TARGET) --embed-file font.ttf
	node main.js font.ttf w 40 40 0

# ----------------------------------------

# the following isn't really used -- left here for historical purposes
LIBFREETYPE_JS = libfreetype260.js

$(LIBFREETYPE_JS): $(TARGET)
	$(CC) $(OPTIMIZATION) -o $(LIBFREETYPE_JS) $(TARGET)

