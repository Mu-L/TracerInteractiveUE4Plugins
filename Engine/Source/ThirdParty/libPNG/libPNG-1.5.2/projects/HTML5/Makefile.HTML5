
# use build_html.sh to set/build the following variables
#	OPTIMIZATION=
#	LIB=

ZLIB_HEADER=../../zlib/zlib-1.2.5/Inc


CC=emcc
CFLAGS= $(CFLAGS_EXTRA) $(OPTIMIZATION) -I$(ZLIB_HEADER) -Wall
LDFLAGS= $(CFLAGS_EXTRA) $(OPTIMIZATION)

MKDIR=mkdir -p
RM=rm -f
CP=cp -vf

# ----------------------------------------

INTERMEDIATE=Intermediate

$(INTERMEDIATE):
	$(MKDIR) $(INTERMEDIATE)

# ----------------------------------------

SOURCES= png.c \
		pngerror.c \
		pngget.c \
		pngmem.c \
		pngpread.c \
		pngread.c \
		pngrio.c \
		pngrtran.c \
		pngrutil.c \
		pngset.c \
		pngtrans.c \
		pngwio.c \
		pngwrite.c \
		pngwtran.c \
		pngwutil.c \

# ----------------------------------------

OBJECTS=$(SOURCES:%.c=$(INTERMEDIATE)/%.bc)

$(INTERMEDIATE)/%.bc : %.c
	$(CC) $(CFLAGS) $< -o $@

TARGET=$(INTERMEDIATE)/$(LIB)

$(TARGET): $(INTERMEDIATE) $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

all: $(SOURCES) $(TARGET)

install: all 
	$(CP) $(TARGET) lib/HTML5/.

uninstall:
	$(RM) lib/HTML5/$(LIB)

clean:
	$(RM) $(OBJECTS) $(TARGET)

# ----------------------------------------

zlib: 
	cp ../../zlib/zlib-1.2.5/Lib/HTML5/zlib_Oz.bc .

test: all zlib pngtest.bc
	  $(CC) -I$(ZLIB_HEADER) -Oz -o pngtest.js pngtest.bc $(TARGET) zlib_Oz.bc --embed-file pngtest.png

